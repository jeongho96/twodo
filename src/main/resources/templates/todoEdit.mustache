{{>common/header}}

<div style="width:100%;height:100%;">
    <div style="width:500px;height:100%;margin:0 auto;">
        <form action="/main/todo/mod" method="POST">
            <h1>일정을 수정해보세요!</h1>
            <h3>일정제목</h3>
            <input type="hidden" name="id" value="{{todoOnce.id}}" >
            <input type="text" name="subject" value="{{todoOnce.subject}}">

            <h4>일정내용</h4>
            <input type="text" name="detail" value="{{todoOnce.detail}}">

            <h4>마감일시</h4>
            <input type="date" name="target_date" value="{{todoOnce.str_target_date}}" max="2023-12-31" >
            <br>
            <br>
            <input type="submit" value="수정" />
            <input type="button" value="취소" onclick="javascript:history.back(-1);"/>
        </form>
    </div>
</div>
{{>common/footer}}

