<script type="text/javascript">
    $(document).ready(function(){
        $.ajax({
            type: "GET", // GET 방식으로 요청한다.
            url: "http://api.openweathermap.org/data/2.5/weather?q=Seoul&appid=b9661ebfbd79cba1593063a1146d5ff5&units=metric",

            data: {}, // 요청하면서 함께 줄 데이터 (GET 요청시엔 비워두세요)
            success: function (response) { // 서버에서 준 결과를 response라는 변수에 담음
                //console.log(response) // 서버에서 준 결과를 이용해서 나머지 코드를 작성
                let $Icon = (response.weather[0].icon);
                let $Temp = Math.floor(response.main.temp) + 'º';
                let $city = response.name;

                // $('.CurrIcon').append('http://openweathermap.org/img/w/'+ $Icon + '.png');
                $('.CurrTemp').prepend($Temp);
                $('.City').append($city);
            }
        })
    });
</script>



