<script>
    function checkDone(id) {
        var r = confirm("일정을 완료하시겠습니까?");
        if (r == true) {
            location.href = "/main/tododone/" + id;
        } else {
            alert("취소하셨습니다");
        }
    }
    function checkDelete(id) {
        var r = confirm("일정을 삭제하시겠습니까?");
        if (r == true) {
            location.href = "/main/todo/del/" + id;
        } else {
            alert("취소하셨습니다");
        }
    }
</script>

